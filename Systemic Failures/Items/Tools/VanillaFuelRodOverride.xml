<Override>
    <Items>
        <!-- vanilla fuelrod replaces itself with modded variant or nuclear cartridge, depending on where it is located for compatibility with preplaced items -->
        <Item hideinmenus="true" name="" identifier="fuelrod" Category="Fuel" Tags="fuelroditem,smallitem,reactorfuel,nuclearcartridge,divingsuitfuel,mountableweapon" spritecolor="255,0,0,255" inventoryiconcolor="255,0,0,255" maxstacksize="1" cargocontaineridentifier="fuelrodcrate" scale="0.5" impactsoundtag="impact_fuelrod" requireaimtouse="true">
            <InventoryIcon texture="Content/Items/InventoryIconAtlas.png" sourcerect="576,64,64,64" origin="0.5,0.5" />
            <Sprite texture="Content/Items/Tools/tools.png" depth="0.55" sourcerect="410,1,19,68" />
            <Body radius="6" height="55" density="13" />
            <ItemComponent canbeselected="false" canbepicked="false" allowingameediting="false">
                <!-- remove the fuelrod and spawn a nuclear cartridge in its place if it's contained in an exosuit or RFA gun -->
                <StatusEffect type="OnContained" target="This" delay="0.1" disabledeltatime="true" stackable="false" oneshot="true">
                    <Conditional HasTag="deepdivinglarge" targetcontainer="true" />
                    <Conditional HasTag="gun" targetcontainer="true" />
                    <Remove />
                    <SpawnItem identifier="nuclearcartridge" spawnposition="SameInventory" spawnifcantbecontained="true" spawnifinventoryfull="true" />
                </StatusEffect>

                <!-- remove the fuelrod and spawn a uraniumfuelrod in its place if it's contained in anything else -->
                <StatusEffect type="OnContained" target="This" delay="0.1" disabledeltatime="true" comparison="And" stackable="false" oneshot="true">
                    <Conditional HasTag="neq deepdivinglarge" targetcontainer="true" />
                    <Conditional HasTag="neq gun" targetcontainer="true" />
                    <Remove />
                    <SpawnItem identifier="uraniumfuelrod_er" spawnposition="SameInventory" spawnifcantbecontained="true" spawnifinventoryfull="true" />
                </StatusEffect>

                <!-- remove the fuelrod and spawn a uraniumfuelrod in its place if it's not contained -->
                <StatusEffect type="OnNotContained" target="This" delay="0.1" disabledeltatime="true" stackable="false" oneshot="true">
                    <Remove />
                    <SpawnItem identifier="uraniumfuelrod_er" spawnposition="This" spawnifcantbecontained="true" spawnifinventoryfull="true" />
                </StatusEffect>
            </ItemComponent>

            <Holdable handle1="0,0" slots="Any,RightHand,LeftHand" msg="ItemMsgPickUpSelect" canBeCombined="false" throwforce="3.5" aimpos="35,-10" />
            <AiTarget sightrange="4000" />
        </Item>

